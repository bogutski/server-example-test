{
  "name": "pasv-server",
  "version": "0.1.37",
  "private": true,
  "description": "PASV server",
  "main": "index.js",
  "engines": {
    "node": "12.11.1",
    "npm": "6.11.3"
  },
  "scripts": {
    "start": "npm run build && node build",
    "heroku-postbuild": "npm install",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && babel src -d build",
    "lint": "eslint --ext .js ./src/modules",
    "test": "NODE_ENV=local mocha ./src/**/*.spec.js --reporter mochawesome -r dotenv/config --require @babel/register --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bogutski/pasv-server.git"
  },
  "author": "Viktor Bogutskii",
  "license": "MIT",

  "dependencies": {
    "@sentry/node": "^5.7.1",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "2.4.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "express": "^5.0.0-alpha.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongodb-atlas-backup": "^0.9.2",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "multer": "^2.0.0-alpha.6",
    "nodemailer": "^6.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^10.2.0",
    "mochawesome": "^4.1.0",
    "nodemon": "^1.19.4",
    "prettier": "1.18.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
